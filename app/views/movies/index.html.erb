<h1>Listing movies</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Poster</th>
    <th>Desc</th>
    <th>Rating</th>
    <th>Genre</th>
    <th>Cast</th>
    <th>Trailer</th>
    <th>Reviews</th>
    <th>Tweets</th>
    <th>Similar movies</th>
    <th>Other information</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @movies.each do |movie| %>
  <tr>
    <td><%= movie.name %></td>
    <td><%= movie.poster %></td>
    <td><%= movie.desc %></td>
    <td><%= movie.rating %></td>
    <td><%= movie.genre %></td>
    <td><%= movie.cast %></td>
    <td><%= movie.trailer %></td>
    <td><%= movie.reviews %></td>
    <td><%= movie.tweets %></td>
    <td><%= movie.similar_movies %></td>
    <td><%= movie.other_information %></td>
    <td><%= link_to 'Show', movie %></td>
    <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
    <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

