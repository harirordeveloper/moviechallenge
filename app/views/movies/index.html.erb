<%= form_tag findmovie_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :title, params[:title],:style=>"
    margin-left: 75%;"%>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<div class="container" style="margin-top: 2%;margin-bottom: 2%;">
    <div class="row">
      <div class="span8" style="background-color: #f1f1f1;border-radius: 12px;text-align: center;">
<% @movies.each do |movie| %>
   <%= link_to movie.title, findmovie_path(:title=>movie.title) %><br/><br/>
<% end %>
</div>
</div>
</div>
